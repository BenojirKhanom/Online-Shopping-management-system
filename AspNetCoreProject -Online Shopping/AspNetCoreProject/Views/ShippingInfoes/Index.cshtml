@model IEnumerable<AspNetCoreProject.Models.ShippingInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShippingCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryBoy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryBoy.DeliveryBoyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShippingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShippingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShippingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
